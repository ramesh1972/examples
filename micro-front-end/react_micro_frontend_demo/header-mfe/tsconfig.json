/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true, // Ensure Ivy rendering engine is enabled
    "strictInjectionParameters": true, // Enable strict DI checks
    "strictTemplates": true, // Enable strict template checks
    "fullTemplateTypeCheck": true, // Enable full type checking for templates
    "skipTemplateCodegen": false, // AOT needs this to be false
    "enableI18nLegacyMessageIdFormat": false,
    "strictInputAccessModifiers": true,
  }
}
